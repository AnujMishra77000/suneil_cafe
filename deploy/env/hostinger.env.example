# -------------------------------
# Django Core
# -------------------------------
DEBUG=False
DJANGO_SECRET_KEY=replace_with_long_random_secret
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

USE_X_FORWARDED_HOST=true
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# -------------------------------
# PostgreSQL (Hostinger VPS local container)
# -------------------------------
POSTGRES_DB=thathwamasi
POSTGRES_USER=thathwamasi
POSTGRES_PASSWORD=replace_with_strong_db_password

# -------------------------------
# Django -> PgBouncer
# -------------------------------
DATABASE_URL=postgresql://thathwamasi:replace_with_strong_db_password@pgbouncer:6432/thathwamasi?sslmode=disable
DB_SSLMODE=disable
DB_CONN_MAX_AGE=60
DB_CONNECT_TIMEOUT=10
DB_KEEPALIVES_IDLE=30
DB_KEEPALIVES_INTERVAL=10
DB_KEEPALIVES_COUNT=5
DB_FORCE_IPV4=false
DB_HOSTADDR=

# Optional direct DB fallback (if DATABASE_URL is not set)
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=5432

# -------------------------------
# PgBouncer -> PostgreSQL
# -------------------------------
PGBOUNCER_DB_HOST=postgres
PGBOUNCER_DB_PORT=5432
PGBOUNCER_DB_NAME=thathwamasi
PGBOUNCER_DB_USER=thathwamasi
PGBOUNCER_DB_PASSWORD=replace_with_strong_db_password
PGBOUNCER_POOL_MODE=transaction
PGBOUNCER_MAX_CLIENT_CONN=1000
PGBOUNCER_DEFAULT_POOL_SIZE=80
PGBOUNCER_RESERVE_POOL_SIZE=25
PGBOUNCER_SERVER_TLS_SSLMODE=disable

# -------------------------------
# Redis / Celery
# -------------------------------
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_BROKER_POOL_LIMIT=20
CELERY_BROKER_CONNECTION_MAX_RETRIES=100
CELERY_TASK_DEFAULT_RETRY_DELAY=5
CELERY_TASK_SOFT_TIME_LIMIT=90
CELERY_TASK_TIME_LIMIT=120
CELERY_LOG_LEVEL=INFO
CACHE_TIMEOUT=300

# -------------------------------
# Rate limits / profiling
# -------------------------------
THROTTLE_CART_ADD=60/minute
RATE_LIMIT_ADMIN_LOGIN_MAX_ATTEMPTS=10
RATE_LIMIT_ADMIN_LOGIN_WINDOW_SECONDS=60
SLOW_QUERY_MS=500

# -------------------------------
# Gunicorn
# -------------------------------
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_WORKERS=5
GUNICORN_WORKER_CLASS=gthread
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_GRACEFUL_TIMEOUT=30
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_PRELOAD_APP=true
GUNICORN_LOG_LEVEL=info
GUNICORN_ACCESS_LOG=-
GUNICORN_ERROR_LOG=-

# -------------------------------
# Notification Integrations
# -------------------------------
ADMIN_PHONE=
ADMIN_EMAIL=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_NUMBER=
